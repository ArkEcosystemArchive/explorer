{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest", "webpack", "webpack-env", "webpack", "webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["typings/**/*.d.ts", "src/**/*.ts", "src/**/*.vue", "__tests__/**/*.ts", "__tests__/support/mirage.js"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
