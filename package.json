{
  "name": "ark-explorer",
  "version": "3.0.0",
  "description": "A Blockchain Explorer for ARK using Vue.js and Tailwind CSS",
  "author": "Brian Faust",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arkecosystem/explorer.git"
  },
  "bugs": {
    "url": "https://github.com/arkecosystem/explorer/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "vue-cli-service build",
    "build:mainnet": "vue-cli-service build --network mainnet",
    "build:devnet": "vue-cli-service build --network devnet",
    "build:testnet": "vue-cli-service-build --network testnet",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "lint": "vue-cli-service lint && prettier --write \"./*.{ts,js,json,md,vue}\" \"./src/**/*.{ts,js,json,md,vue}\" \"./tests/**/*.{ts,js,json,md,vue}\"",
    "serve": "vue-cli-service serve",
    "serve:mainnet": "vue-cli-service serve --network mainnet",
    "serve:devnet": "vue-cli-service serve --network devnet",
    "serve:testnet": "vue-cli-service serve --network testnet",
    "task:deploy": "cross-env-shell ./scripts/deploy.sh",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "jest --maxWorkers=2 --config __tests__/unit/jest.conf.js",
    "test:e2e": "cypress run",
    "test:e2e:ci": "start-server-and-test dev http://localhost:8080 test:e2e"
  },
  "dependencies": {
    "@types/nprogress": "^0.2.0",
    "animate.css": "^3.7.2",
    "axios": "^0.19.0",
    "chart.js": "^2.8.0",
    "connect-history-api-fallback": "^1.6.0",
    "core-js": "^2.6.5",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "node-emoji": "^1.10.0",
    "nprogress": "^0.2.0",
    "qrious": "^4.0.2",
    "v-tooltip": "^2.0.2",
    "vue": "^2.6.10",
    "vue-chartjs": "^3.4.2",
    "vue-class-component": "^7.0.2",
    "vue-i18n": "^8.0.0",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.1.3",
    "vue-spinner": "^1.0.3",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@types/jest": "^23.1.4",
    "@types/lodash": "^4.14.138",
    "@types/node-emoji": "^1.8.1",
    "@types/prettier": "^1.18.2",
    "@types/webpack": "^4.4.0",
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-e2e-cypress": "^3.11.0",
    "@vue/cli-plugin-typescript": "^3.11.0",
    "@vue/cli-plugin-unit-jest": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "es6-promise": "^4.2.8",
    "es6-promise-promise": "^1.0.0",
    "lint-staged": "^8.1.5",
    "minimist": "^1.2.0",
    "prettier": "^1.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "tailwindcss": "^1.1.2",
    "ts-jest": "^23.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3",
    "vue-cli-plugin-i18n": "^0.6.0",
    "vue-good-table": "^2.18.0",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
